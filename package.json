{
  "name": "eloquent",
  "version": "2.0.0",
  "description": "Professional voice-to-text macOS application with enhanced AI recognition and ultra-reliable pasting",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "build:mac": "electron-builder --mac --universal",
    "build:dmg": "electron-builder --mac dmg",
    "build:zip": "electron-builder --mac zip",
    "dist": "electron-builder --mac --universal",
    "fix-permissions": "./fix_permissions.sh",
    "reset-permissions": "tccutil reset Microphone && tccutil reset Accessibility && echo '✅ Permissions reset. Please restart the app.'"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "form-data": "^4.0.0",
    "node-record-lpcm16": "^1.0.1"
  },
  "build": {
    "appId": "com.eloquent.app",
    "productName": "Eloquent",
    "copyright": "Copyright © 2024",
    "files": [
      "main.js",
      "dashboard.html",
      "overlay.html",
      "ai-prompts.js",
      "utils.js",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "zip",
          "arch": ["universal"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "minimumSystemVersion": "10.15.0",
      "type": "distribution"
    },
    "dmg": {
      "title": "Eloquent ${version}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "compression": "maximum",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  }
}