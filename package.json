{
  "name": "eloquent",
  "version": "2.1.0",
  "description": "Professional voice-to-text macOS application with enhanced AI recognition, subscription management, and ultra-reliable pasting",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "prod": "NODE_ENV=production electron .",
    "configure-production": "./configure-production.sh",
    "validate-production": "node validate-production.js",
    "check-production": "node check-production.js",
    "deploy-heroku": "./deploy-heroku.sh",
    "heroku-config": "./heroku-config.sh",
    "test-backend": "./test-backend.sh",
    "build": "electron-builder --mac --universal",
    "build:arm64": "electron-builder --mac --arm64",
    "build:x64": "electron-builder --mac --x64",
    "build:signed": "electron-builder --mac --universal --publish never",
    "build:unsigned": "electron-builder --mac --universal --publish never --config.afterSign=",
    "reset-permissions": "tccutil reset Microphone && tccutil reset Accessibility && echo '✅ Permissions reset. Please restart the app.'",
    "backend:dev": "cd backend-go && go run main.go",
    "backend:build": "cd backend-go && go build -o eloquent-backend .",
    "start:full": "npm run backend:dev & npm start",
    "test:integration": "node test-integration.js",
    "test:frontend-backend": "node test-frontend-backend.js",
    "test:full": "npm run test:integration && npm run test:frontend-backend"
  },
  "devDependencies": {
    "@electron/notarize": "^2.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.88.0",
    "axios": "^1.6.0",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.0"
  },
  "build": {
    "appId": "com.eloquent.app",
    "productName": "Eloquent",
    "copyright": "Copyright © 2024 Eloquent",
    "files": [
      "main.js",
      "auth-service.js",
      "dashboard.html",
      "overlay.html",
      "admin.html",
      "login.html",
      "subscription.html",
      "ai-prompts.js",
      "utils.js",
      "performance-monitor.js",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "minimumSystemVersion": "10.15.0",
      "type": "distribution"
    },
    "dmg": {
      "title": "Eloquent ${version}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "compression": "maximum",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  }
}
